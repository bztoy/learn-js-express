<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/riders/" method="POST" class="mb-4">
    <div class="form-group">
        <label for="number">Number</label>
        <input type="text" name="number" class="form-control">
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="team">Team</label>
        <input type="text" name="team" class="form-control">
    </div>
    <input type="submit" value="Add rider" class="btn btn-primary btn-block">
</form>
<h4>Riders</h4>
<ul class="list-group">
    {{#each riders}}
        <li class="list-group-item">{{this.number}}: {{this.name}} {{this.team}}</li>
    {{/each}}
</ul>
<a href="/api/riders" class="btn btn-light mt-4">Visit API</a>